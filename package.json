{
  "name": "lundi",
  "author": "",
  "version": "0.0.5",
  "repository": {
    "type": "git",
    "url": "https://github.com/callmemagnus/lundi.git"
  },
  "description": "Script to run on monday morning",
  "main": "index.js",
  "config": {
    "filename": ".lundi.json"
  },
  "engines": {
    "node": ">=6"
  },
  "scripts": {
    "release": "np",
    "prepublish": "npm-run-all lint:* test coverage build",
    "build": "rimraf dist && babel src -d dist",
    "watchDev": "watch 'npm run test' tests src",
    "watch": "watch src",
    "lint:js": "eslint --config .eslintrc.js src/**/*.js",
    "lint:prettier": "prettier -l **/*.js **/*.md",
    "fix:prettier": "prettier --write **/*.js **/*.md",
    "coverage": "nyc check-coverage --branch 80 --func 80 --lines 80",
    "test": "nyc babel-tape-runner tests/*.js"
  },
  "bin": {
    "lundi": "index.js"
  },
  "license": "ISC",
  "dependencies": {
    "async": "2.6.0",
    "chalk": "2.3.2",
    "commander": "2.15.1",
    "debug": "3.1.0",
    "figlet": "1.2.0",
    "fs-extra": "5.0.0",
    "log-update": "2.3.0",
    "pad": "2.0.3",
    "pluralise": "1.0.0",
    "prettier": "1.10.2",
    "simple-git": "1.92.0"
  },
  "devDependencies": {
    "babel-cli": "6.26.0",
    "babel-plugin-transform-async-to-generator": "6.24.1",
    "babel-preset-env": "1.6.1",
    "babel-tape-runner": "2.0.1",
    "eslint": "4.19.1",
    "mock-fs": "4.4.2",
    "np": "2.20.1",
    "npm-run-all": "4.1.2",
    "nyc": "11.6.0",
    "rimraf": "2.6.2",
    "tape": "4.9.0",
    "watch": "1.0.2"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ],
    "plugins": [
      "transform-async-to-generator"
    ]
  }
}
