{
  "name": "lundi",
  "author": "",
  "version": "0.0.3",
  "description": "Script to run on monday morning",
  "main": "index.js",
  "config": {
    "filename": ".lundi.json"
  },
  "engines": {
    "node": ">=6"
  },
  "scripts": {
    "release": "np",
    "prepublish": "npm-run-all lint test coverage build",
    "build": "rimraf dist && babel src -d dist/",
    "watch": "watch 'npm run test' tests src",
    "lint": "eslint \"src/**/*js\"",
    "coverage": "nyc check-coverage --branch 80 --func 80 --lines 80",
    "test": "nyc babel-tape-runner tests/*.js"
  },
  "bin": {
    "lundi": "index.js"
  },
  "license": "ISC",
  "dependencies": {
    "async": "2.3.0",
    "chalk": "1.1.3",
    "commander": "2.9.0",
    "debug": "2.6.4",
    "figlet": "1.2.0",
    "fs-extra": "2.1.2",
    "simple-git": "1.70.0"
  },
  "devDependencies": {
    "babel-cli": "6.24.1",
    "babel-preset-latest": "6.24.1",
    "babel-tape-runner": "2.0.1",
    "eslint": "3.19.0",
    "mock-fs": "4.2.0",
    "np": "2.13.2",
    "npm-run-all": "4.0.2",
    "nyc": "10.2.0",
    "rimraf": "2.6.1",
    "tape": "4.6.3",
    "watch": "1.0.2"
  },
  "babel": {
    "presets": "latest"
  }
